pipeline {
  agent any
  tools {nodejs "NODEJS"}
  stages {
    stage('main logo prepare') {
      when {
        branch "main"
      }
      steps {
        sh 'mv ./jenkins/main.svg ./src/logo.svg'
      }
    }
    stage('dev logo prepare') {
      when {
        branch "dev"
      }
      steps {
        script {
          env.PORT=3001
        }
        sh 'chmod +x ./jenkins/copylogo.sh'
        sh './jenkins/copylogo.sh dev'
      }
    }
    stage('build') {
      steps {
        sh 'npm install'
      }
    }
    stage('test') {
      steps {
        sh 'chmod +x ./jenkins/deliver.sh'
        sh 'chmod +x ./jenkins/kill.sh'
        sh './jenkins/deliver.sh'
        input message: 'Finished?'
        sh './jenkins/kill.sh'
      }
    }
    stage('imagebuild') {
      steps {
        echo 'Building docker image...'
      }
    }
    stage('deploy') {
      steps {
        echo 'Deploying...'
      }
    }
  }
}
